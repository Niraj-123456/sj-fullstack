{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    // "target": "es2017",
    // "lib": ["es2017"],
    "target": "es2018",
    "lib": ["ES2018"],

    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "rootDir": "./",
    "typeRoots": ["node_modules/@types"]
  }
